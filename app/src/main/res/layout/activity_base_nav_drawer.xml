<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:openDrawer="start">

    <include
            layout="@layout/app_bar_base_nav_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <android.support.design.widget.NavigationView
            android:id="@+id/nav_view_base"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/overlayBackground"
            android:fitsSystemWindows="false"

            app:itemTextColor="#ffffff"
            app:itemIconTint="#ffffff">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical">
            <ImageView android:layout_width="match_parent" android:layout_height="150dp"
                       android:src="@drawable/foodologo"
            android:scaleType="centerCrop"/>
            <LinearLayout
                    android:id="@+id/menu_menu_base"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"

                          style="@style/nav_menu_items"
            android:clickable="true">
                <ImageView android:layout_width="wrap_content" android:layout_height="match_parent"
                           android:src="@drawable/ic_restaurant_menu_black_24dp"
                           android:gravity="center_vertical"
                           android:layout_marginLeft="20dp"/>
                <TextView
                        android:id="@+id/menu_menu_text_base"
                        android:layout_width="wrap_content" android:layout_height="match_parent"
                        android:text="menu"
                        android:textColor="#ffffff"
                        android:textSize="20sp"

                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="20dp"/>
            </LinearLayout>
        <LinearLayout
                android:id="@+id/cart_base"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal"
android:clickable="true"
        style="@style/nav_menu_items">
            <ImageView android:layout_width="wrap_content" android:layout_height="match_parent"
                       android:src="@drawable/ic_shopping_cart_black2_24dp"
                       android:gravity="center_vertical"
                       android:layout_marginLeft="20dp"/>
            <TextView
                    android:id="@+id/nav_menu_text_base"
                    android:layout_width="wrap_content" android:layout_height="match_parent"
                    android:text="cart"
                    android:textColor="#ffffff"
                    android:textSize="20sp"

                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"/>
            <TextView
                    android:id="@+id/orders_in_cart_base"
                    android:layout_width="wrap_content" android:layout_height="match_parent"
                    android:layout_marginLeft="70dp"
                    android:background="#b91b1b"
                    android:textColor="#fff"


                    android:gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/nav_menu_orders_base"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/nav_menu_items"
                android:clickable="true">
            <ImageView android:layout_width="wrap_content" android:layout_height="match_parent"
                       android:src="@drawable/ic_attach_money_black2_24dp"
                       android:gravity="center_vertical"
                       android:layout_marginLeft="20dp"/>
            <TextView
                    android:id="@+id/nav_menu_requests_text"
                    android:layout_width="wrap_content" android:layout_height="match_parent"
                    android:text="orders"
                    android:textColor="#ffffff"
                    android:textSize="20sp"

                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"/>
            <TextView
                    android:id="@+id/requests_base"
                    android:layout_width="wrap_content" android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:background="#b91b1b"
                    android:textColor="#fff"


                    android:gravity="center_vertical"/>
        </LinearLayout>
            <LinearLayout
                    android:id="@+id/sign_out_base"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    style="@style/nav_menu_items"
                    android:clickable="true">
                <ImageView android:layout_width="wrap_content" android:layout_height="match_parent"
                           android:src="@drawable/ic_exit_to_app_black_24dp"
                           android:gravity="center_vertical"
                           android:layout_marginLeft="20dp"/>
                <TextView
                        android:id="@+id/nav_menu_log_out"
                        android:layout_width="wrap_content" android:layout_height="match_parent"
                        android:text="sign out"
                        android:textColor="#ffffff"
                        android:textSize="20sp"

                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="20dp"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
