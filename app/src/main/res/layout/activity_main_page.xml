<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".newVer.auth.mainMenu.mainPage">
    <LinearLayout
            android:id="@+id/fragment_content"
            android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
   android:layout_alignParentTop="true"
            android:layout_above="@id/bottom_nav_menu"
   >

    </LinearLayout>
<LinearLayout
        android:id="@+id/bottom_nav_menu"
        android:layout_width="match_parent" android:layout_height="wrap_content"
android:orientation="horizontal"
        android:background="@color/colorPrimary"
android:weightSum="4" android:layout_alignParentBottom="true">
    <ImageView
            android:id="@+id/main_menu_fragment"
            android:layout_height="wrap_content" android:layout_width="0dp" android:layout_weight="1"
    android:clickable="true"
    android:src="@drawable/ic_restaurant_menu_black_24dp"
   android:layout_margin="4dp"/>
    <ImageView
            android:id="@+id/main_menu_cart"
            android:layout_height="wrap_content" android:layout_width="0dp" android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/ic_shopping_cart_black_24dp"
            android:layout_margin="4dp"/>
    <ImageView
            android:id="@+id/main_menu_request"
            android:layout_height="wrap_content" android:layout_width="0dp" android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/ic_airport_shuttle_green_24dp"
            android:layout_margin="4dp"/>
</LinearLayout>
</RelativeLayout>