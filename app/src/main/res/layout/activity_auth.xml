<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".newVer.auth.userauth.authActivity"
        android:orientation="vertical"
        android:background="@drawable/auth_background">

    <LinearLayout
            android:id="@+id/login_dialog-fileds"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_margin="14dp"
    >
        <EditText
                android:id="@+id/auth_phone_field" android:layout_width="match_parent" android:layout_height="0dp"
                android:inputType="phone"
                android:hint="phone"
                android:layout_weight="1"
                android:background="@drawable/auth_activity_fields"
                android:padding="17dp"
                android:textColor="@color/colorPrimary"/>
        <LinearLayout
                android:id="@+id/codeblock"
                android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical"
                android:visibility="gone">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Enter code from SMS
        in field below"
                      android:layout_gravity="center"
                      android:textSize="24dp"
                      android:textStyle="bold"
                      android:layout_marginTop="12dp"/>
            <EditText
                    android:id="@+id/code_sms_field"
                    android:layout_width="match_parent" android:layout_height="wrap_content"

                    android:layout_marginTop="7dp"
                    android:background="@drawable/auth_activity_fields"
                    android:padding="12dp"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:weightSum="2"
                          android:layout_margin="26dp">
                <Button

                        android:id="@+id/enter_dialog_ok"
                        android:layout_width="0dp"
                        android:text="Ok"
                        android:layout_weight="1"
                        android:layout_marginRight="16dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/login_button"
                />
                <Button
                        android:id="@+id/entercode_dialog_cancel"
                        android:layout_width="0dp"
                        android:text="Cancel"
                        android:layout_weight="1"
                        android:textColor="@color/colorAccent" android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:background="@drawable/btn_register"
                />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"

                  android:layout_margin="26dp"
    android:layout_gravity="center">
        <Button

                android:id="@+id/auth_act_log"
                android:layout_width="match_parent"
                android:text="Log in"
                android:textColor="#0a0a09"
                android:textStyle="bold"
                android:textSize="22dp"
                android:layout_height="wrap_content"
                android:background="@drawable/login_button"

                android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>



