<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
        android:id="@+id/login_view"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
         xmlns:android="http://schemas.android.com/apk/res/android"
android:background="@drawable/auth_background">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:weightSum="4"
                  android:padding="23dp">
        <EditText
                android:id="@+id/name" android:layout_width="match_parent" android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/auth_activity_fields"
                android:hint="name"
                android:paddingTop="22dp"
                android:paddingBottom="12dp"/>
        <EditText
                android:id="@+id/phone" android:layout_width="match_parent" android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/auth_activity_fields"
                android:hint="phone"
                android:paddingTop="22dp"
                android:paddingBottom="12dp"
                android:layout_marginTop="12dp"/>
        <EditText
                android:id="@+id/password" android:layout_width="match_parent" android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/auth_activity_fields"
                android:hint="password"
                android:inputType="textPassword"
                android:paddingTop="22dp"
                android:paddingBottom="12dp"
                android:layout_marginTop="12dp"/>
        <EditText
                android:id="@+id/conf_pasword"               android:layout_width="match_parent" android:layout_height="0dp"

                android:hint="conf password"
                android:layout_weight="1"
                android:paddingTop="22dp"
                android:paddingBottom="12dp" android:layout_marginTop="12dp"
                android:background="@drawable/auth_activity_fields"
        />


    </LinearLayout>
    <Button
            android:text="submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submit_button"
            android:background="@drawable/order_button_back"
            android:layout_marginHorizontal="43dp"
            android:paddingTop="20dp"
            android:paddingBottom="12dp"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
    android:textAlignment="center"
    android:layout_gravity="center"/>

    </LinearLayout>
