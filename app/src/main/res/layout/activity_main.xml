<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@drawable/foodologo">

   <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
   android:orientation="vertical"
   android:layout_centerInParent="true"
   android:id="@+id/buttons_in_main">
       <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="email"
               android:textColorHint="#fff"
               android:id="@+id/name_mainAct"
               android:background="@drawable/shape_menu"
               android:layout_marginHorizontal="43dp"
               android:padding="7dp"
               android:textColor="#ffffff" android:layout_marginBottom="8dp"
               android:layout_centerInParent="true"
       />
       <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:inputType="textPassword"
               android:hint="password"
               android:textColorHint="#fff"
               android:ems="10"
               android:id="@+id/password_mainAct"
               android:background="@drawable/shape_menu"
               android:layout_marginHorizontal="43dp"
               android:padding="7dp"
               android:textColor="#ffffff" android:layout_marginBottom="8dp"
               android:layout_below="@id/name_mainAct"
       />
   </LinearLayout>

    <android.support.v7.widget.CardView
            android:id="@+id/card_view_below_cart_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:cardBackgroundColor="#FF353A45">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:orientation="horizontal">

            ]
            <Button
                    android:text="Log in"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/login"
                    android:background="@drawable/button_shape"
                    android:textColor="#ffffff"
                   android:layout_weight="1"/>
            <Button
                    android:text="Register"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/register"
                    android:background="@drawable/button_shape"
                    android:textColor="#ffffff"
                   android:layout_weight="1" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>