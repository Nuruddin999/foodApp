<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@drawable/foodologo">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:hint="email"
            android:textColorHint="#fff"
            android:ems="10"
            android:id="@+id/name_mainAct"
            android:background="@drawable/shape_menu"
            android:layout_marginHorizontal="43dp"
            android:padding="7dp"
            android:textColor="#ffffff" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp" app:layout_constraintHorizontal_bias="0.88"
            app:layout_constraintVertical_bias="0.35000002"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:inputType="textPassword"
            android:hint="password"
            android:textColorHint="#fff"
            android:ems="10"
            android:id="@+id/password_mainAct"
            android:background="@drawable/shape_menu"
            android:layout_marginHorizontal="43dp"
            android:padding="7dp"
            android:textColor="#ffffff" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.542"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:gravity="bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingHorizontal="23dp"
            android:paddingVertical="12dp" app:layout_constraintHorizontal_bias="0.0" android:paddingEnd="0dp"
            android:paddingStart="0dp" android:paddingTop="0dp" android:paddingBottom="0dp">
        <Button
                android:text="Log in"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/login"
                android:background="@drawable/button_shape"
                android:textColor="#ffffff" android:layout_weight="1"
        android:onClick="onClick"/>
        <Button
                android:text="Register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/register"
                android:background="@drawable/button_shape"
                android:textColor="#ffffff"
                android:onClick="onClick" android:layout_weight="1"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>