<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    app:cardBackgroundColor="#C04ED8"
                                    android:layout_margin="20dp">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical" android:paddingTop="12dp"
    android:paddingHorizontal="22dp"
    >
        <TextView android:id="@+id/request_list_item_id"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  style="@style/requestListitem"
                  android:text="id"

        />
        <TextView
                android:id="@+id/request_list_item_name"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
               style="@style/requestListitem"
                android:text="name"

        />




        <TextView android:id="@+id/request_list_item_address"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  style="@style/requestListitem"
                  android:text="address"

        />
        <TextView android:id="@+id/request_list_item_status"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  style="@style/requestListitem"
                  android:text="status"
        android:paddingBottom="12dp"/>
        </LinearLayout>


</android.support.v7.widget.CardView>