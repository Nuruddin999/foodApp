<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/auth_background"
android:weightSum="8">

        <ImageView android:layout_width="match_parent"
                   android:layout_weight="1.5" android:layout_height="0dp" android:src="@drawable/eatitgr"/>
    <TextView android:layout_width="match_parent" android:layout_height="0dp"
              android:layout_weight="1"
              android:scrollbars="vertical"
              android:textSize="20sp"
              android:textStyle="bold"
              android:text="Since 1980th. Best dishes for you. Look , order , taste , enjoi . Fast delivery, good service, many lots of dishes "
              android:layout_margin="12dp"/>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="0dp"
                      android:layout_weight="5"
                      android:orientation="vertical" android:weightSum="6"
       android:layout_gravity="center" android:layout_marginTop="22dp"
        >
            <android.support.v7.widget.CardView android:layout_width="match_parent"
                                                android:layout_height="0dp"
                                                android:layout_weight="1.5" app:cardBackgroundColor="@color/colorPrimary"
                                                app:cardCornerRadius="22dp"
                     android:layout_marginTop="25dp"
            >
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                              android:orientation="horizontal"
                              android:weightSum="6"
               android:padding="12dp" >
                    <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                               android:src="@drawable/ic_phone_black_24dp"
                               android:layout_weight="2"
                  android:layout_gravity="center"

                    />
                    <TextView android:layout_width="0dp" android:layout_height="match_parent"
                              android:layout_weight="4"
                              android:text="call" android:textColor="@android:color/white"
                              android:textSize="20sp"
                              android:textStyle="bold"
                              android:gravity="center"
                    />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView android:layout_width="match_parent"
                                                android:layout_height="0dp"
                                                android:layout_weight="1.5" app:cardBackgroundColor="@color/colorPrimary"
                                                app:cardCornerRadius="22dp"

                                                android:layout_marginTop="25dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                              android:orientation="horizontal"
                              android:weightSum="6"
android:padding="12dp"
                              >
                    <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                               android:layout_gravity="center" android:src="@drawable/ic_place_black_24dp"

                               android:layout_weight="2"
                               android:padding="2dp"
                    />
                    <TextView android:layout_width="0dp" android:layout_height="match_parent"
                              android:layout_weight="4"
                              android:text="find us"

                              android:textColor="@android:color/white"
                              android:textSize="20sp"
                              android:textStyle="bold"
                              android:gravity="center"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView android:layout_width="match_parent"
                                                android:layout_height="0dp"
                                                android:layout_weight="1.5" app:cardBackgroundColor="@color/colorPrimary"
                                                app:cardCornerRadius="22dp"

                                                android:layout_marginTop="25dp"
            >
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                              android:orientation="horizontal"
                              android:weightSum="6"
android:padding="12dp"
                              >
                    <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                               android:src="@drawable/ic_question_answer_black_24dp"
                               android:layout_gravity="center"
                               android:layout_weight="2"
android:padding="3dp"
                    />
                    <TextView android:layout_width="0dp" android:layout_height="match_parent"
                              android:layout_weight="4"
                              android:text="message"

                              android:textColor="@android:color/white"
                              android:textSize="20sp"
                              android:textStyle="bold"
                              android:gravity="center"

                  />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>



</LinearLayout>